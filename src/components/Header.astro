---
const menuLinks = [
  {
    path: '/blog',
    title: 'Blog',
    type: 'routeTo',
  },
  {
    path: '/Jose_Iciano_Resume.pdf',
    title: 'Resume',
    type: 'routeTo',
  },
  {
    path: '/cv',
    title: 'CV',
    type: 'routeTo',
  },
];
---

<div
  class="sticky flex h-14 w-full justify-center bg-opacity-80 backdrop-blur transition-all duration-100 bg-base-100 text-base-content shadow-sm"
>
  <div class="navbar px-4 md:px-10 pt-0 lg:max-w-[900px] max-w-[100vw]">
    <div class="navbar-start">
      <a class="normal-case text-md font-semibold min-w-[6rem]" href="/"
        >Jose Iciano</a
      >
      <ul tabindex="0" class="flex flex-row z-[1] w-52 space-x-6 ml-6">
        {
          menuLinks.map(link => {
            if (link.type === 'routeTo') {
              return (
                <li class="group ">
                  <a href={link.path}>
                    <span class="text-md no-underline group-hover:underline ">
                      {link.title}
                    </span>
                  </a>
                </li>
              );
            }
          })
        }
      </ul>
    </div>
    <div class="navbar-center"></div>
    <div class="navbar-end space-x-2">
      <!-- <div class="dropdown dropdown-end">
        <button
          tabindex="0"
          class="btn btn-square btn-sm btn-outline w-15 rounded-lg"
          data-toggle-theme="dark,customLight"
          data-act-class="ACTIVECLASS"
          onclick="toggleTheme()"
        >
          <i class="fa-solid fa-moon text-[22px]"></i>
        </button>
      </div> -->

      <div class="dropdown dropdown-end md:hidden">
        <button
          tabindex="0"
          class="btn btn-square btn-sm btn-outline w-15 rounded-lg"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            class="inline-block w-5 h-5 stroke-current"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>

        <ul
          tabindex="0"
          class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-5 w-52 p-2 shadow"
        >
          {
            menuLinks.map(link => {
              if (link.type === 'routeTo') {
                return (
                  <li class="group">
                    <a href={link.path}>
                      <span class="text-md no-underline group-hover:underline">
                        {link.title}
                      </span>
                    </a>
                  </li>
                );
              }
            })
          }
        </ul>
      </div>
    </div>
  </div>
</div>
